{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "jest", "@testing-library/jest-dom", "@testing-library/react", "@testing-library/user-event"],
    "module": "ESNext",
    "skipLibCheck": true,

    "paths": {
      "@components": ["components/index"],
      "@pages": ["pages/index"],
      "@router": ["router/index"],
      "@auth": ["auth/index"],
      "@types": ["types/index"],
      "@constants": ["constants/index"],
      "@utils": ["utils/index"],
      "@context": ["context/index"],
      "@store": ["store/index"],
      "@assets": ["assets/index"],
      "@ui": ["components/UI/index"]
    },

    "allowJs": true,
    "baseUrl": "./src/",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsxImportSource": "react",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
